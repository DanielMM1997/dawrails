<% content_for :head do %>
  <title>Wallpapers House - Panel Admin</title>
<% end %>

<% content_for :content do %>
  <article class="article col-lg-10 col-12">
    <section class="destacados">
      <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Título</th>
          <th scope="col">Etiquetas</th>
          <th scope="col">Categoría</th>
          <th scope="col">Autor</th>
          <th scope="col">Acciones</th>
        </tr>
      </thead>
      <% @backgrounds.each do | background |%>
      <tr>
        <td> <%= background.title%> </td>
        <td> <%= background.tags%> </td>
        <% if background.categories.first == nil %>
          <td> Sin categoria </td>
        <% else %>
          <td>
        <ul>
          <% background.categories.each do | category |%>
            <li> <%= category.name %> </li>
          <% end %>
        </ul>
        </td>
        <% end %>
        <% if background.author == nil %>
        <td> Sin autor </td>
        <% else %>
        <td> <%= background.author.nickname%> </td>
        <% end %>
        <td><a href="<%=background_path(background.id)%>" class="text-primary"><i class="fa fa-fw fa-show"></i>Ver</a>
        <%= button_to "Edit", edit_background_path(background.id), method: :get %>
        <%= button_to "Delete", background_path(background.id), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }%>
      </tr>
      <% end %>
      </table>
    </section>
    <section class="destacados">
      <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Nombre</th>
          <th scope="col">Acciones</th>
        </tr>
      </thead>
      <% @categories.each do | category |%>
      <tr>
        <td> <%= category.name%> </td>
        <td><a href="<%=category_path(category.id)%>" class="text-primary"><i class="fa fa-fw fa-show"></i>Ver</a>
        <%= button_to "Edit", edit_category_path(category.id), method: :get %>
        <%= button_to "Delete", category_path(category.id), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }%>
      </tr>
      <% end %>
      </table>
    </section>
    <section class="destacados">
      <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Nombre</th>
          <th scope="col">Correo</th>
          <th scope="col">Tipo</th>
          <th scope="col">Acciones</th>
        </tr>
      </thead>
      <% @users.each do | user |%>
      <tr>
        <td> <%= user.nickname%> </td>
        <td> <%= user.email%> </td>
        <% if user.type == 1 %>
                  <td> Administrador </td>
                <% elsif user.type == 2 %>
                  <td> Moderador </td>
                <% else %>
                  <td> Usuario registrado </td>
                <% end %>
        <td><a href="<%=user_path(user.id)%>" class="text-primary"><i class="fa fa-fw fa-show"></i>Ver</a>
        <%= button_to "Edit", edit_user_path(user.id), method: :get %>
        <%= button_to "Delete", user_path(user.id), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }%>
      </tr>
      <% end %>
      </table>
    </section>
  </article>

<% end %>

<% content_for :pageScripts do %>
<% end %>