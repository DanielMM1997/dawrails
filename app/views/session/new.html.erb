<% content_for :head do %>
  <title>Wallpapers House - Iniciar sesión</title>
<% end %>

<% content_for :content do %>
    <article class="article col-lg-10 col-12">
        <section>
            <div class="formlogin">
                <h1>Iniciar sesión</h1>
                <%= form_tag '/login' do %>
                    <%= label_tag :nickname%>
                    <%= text_field_tag :nickname%>
                    <%= label_tag :password%>
                    <%= password_field_tag :password%>
                    <%= submit_tag "Iniciar sesión"%>
                <%end%>
            </div>
        </section>
    </article>
<% end %>